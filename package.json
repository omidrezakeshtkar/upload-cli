{
    "name": "csvcli",
    "version": "1.1.0",
    "main": "build/index.js",
    "scripts": {
        "postinstall": "link-module-alias",
        "start": "npm run build && node ./build/index.js readfile file.csv",
        "dev": "npm run start:dev",
        "start:dev": "nodemon",
        "build": "npm-run-all prebuild",
        "prebuild": "rimraf build && yarn build:bundle --minify --outfile=build/index.js",
        "build:start": "node .",
        "build:bundle": "esbuild src/index.ts --bundle --platform=node --target=node16",
        "build:exec": "pkg --output build/exec .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "pkg": {
        "assets": [
            "build/**/*"
        ],
        "targets": [
            "node16-macos-x64",
            "node16-linux-x64",
            "node16-win-x64"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bin": "build/index.js",
    "description": "",
    "dependencies": {
        "@persian-tools/persian-tools": "^3.4.0",
        "axios": "^0.27.2",
        "chalk": "^4.0.1",
        "dotenv": "^16.0.1",
        "node-xlsx": "^0.21.0",
        "papaparse": "^5.3.2",
        "progress": "^2.0.3",
        "yargs": "^17.5.1"
    },
    "devDependencies": {
        "@types/node": "^18.7.6",
        "@types/papaparse": "^5.3.3",
        "@types/yargs": "^17.0.11",
        "esbuild": "^0.15.5",
        "link-module-alias": "^1.2.0",
        "nodemon": "^2.0.19",
        "npm-run-all": "^4.1.5",
        "pkg": "^5.8.0",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4",
        "yarn": "^1.22.19"
    },
    "_moduleAliases": {
        "root": "./",
        "source": "./src",
        "commands": "./src/commands",
        "utils": "./src/utils"
    }
}
